{{!-- profile.hbs --}}

<div class="container-fluid">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            {{#each breadcrumbItems}}
            <li class="breadcrumb-item"><a href="{{this.link}}">{{this.name}}</a></li>
            {{/each}}
            <li class="breadcrumb-item active" aria-current="page">Profile</li>
        </ol>
    </nav>

    {{!-- <br> --}}

    <div class="position-relative">
        <div class="position-relative">
            <div class="position-absolute top-0 start-50 translate-middle">
                {{!-- Dismissing Alert --}}
                {{>alerts/dismissing-alerts}}
            </div>
        </div>

        {{>headers/basic-header}}
    </div>

</div>

<div class="container-fluid overflow-auto">

    <section>
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        {{!-- <img
                            src="data:image/svg+xml;base64,"
                            alt="avatar" class="rounded-circle img-fluid" style="width: 150px;"> --}}
                        <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" fill="currentColor"
                            class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                            <path fill-rule="evenodd"
                                d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                        </svg>
                        {{#each schema.user}}
                        <h5 class="my-3">{{this.Fname}} {{this.Lname}}</h5>
                        {{/each}}
                        <p class="text-muted mb-1 text-capitalize">{{user.userType}}</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        {{#each schema.user}}
                        <div class="row">
                            <div class="col-sm-4">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-8">
                                <p class="text-muted mb-0">{{this.Fname}} {{this.Lname}}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-4">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-8">
                                <p class="text-muted mb-0">{{this.Email}}</p>
                            </div>
                        </div>
                        <hr>
                        {{#if this.Class}}
                        <div class="row">
                            <div class="col-sm-4">
                                <p class="mb-0">Class</p>
                            </div>
                            <div class="col-sm-8">
                                <p class="text-muted mb-0">{{this.Class}}</p>
                            </div>
                        </div>
                        <hr>
                        {{/if}}
                        {{#if this.Section}}
                        <div class="row">
                            <div class="col-sm-4">
                                <p class="mb-0">Class</p>
                            </div>
                            <div class="col-sm-8">
                                <p class="text-muted mb-0">{{this.Section}}</p>
                            </div>
                        </div>
                        <hr>
                        {{/if}}
                        {{#if this.Branch}}
                        <div class="row">
                            <div class="col-sm-4">
                                <p class="mb-0">Class</p>
                            </div>
                            <div class="col-sm-8">
                                <p class="text-muted mb-0">{{this.Branch}}</p>
                            </div>
                        </div>
                        <hr>
                        {{/if}}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <p class="mb-0">Role</p>
                                    </div>
                                    <div class="col-sm-8">
                                        <p class="text-muted mb-0 text-capitalize">{{this.Role}}</p>
                                    </div>
                                </div>
                                <hr class="d-sm-block d-md-none">
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <p class="mb-0">Status</p>
                                    </div>
                                    <div class="col-sm-8">
                                        <p class="text-muted mb-0 text-capitalize">{{this.Status}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>