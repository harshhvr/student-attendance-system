{{!-- edit-student-form.hbs --}}

{{!-- Edit Student Form --}}
<div class="row g-3">
    <div class="col-sm-4">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="sid" value="{{this.Sid}}" placeholder="Student ID" name="sid"
                required>
            <label for="sid">Sid</label>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="fname" value="{{this.Fname}}" placeholder="First Name"
                name="fname" required>
            <label for="fname">First Name</label>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="lname" value="{{this.Lname}}" placeholder="Last Name"
                name="lname" required>
            <label for="lname">Last Name</label>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="email" value="{{this.Email}}" placeholder="name@example.com"
                name="email" required>
            <label for="email">Email address</label>
        </div>
    </div>
    <div class="col-sm-2">
        <div class="form-floating mb-3">
            <select id="programme" class="form-select" name="programme" aria-label="Default select example" required>
                <option value="" {{#if this.MyProgramme}}{{else}}selected{{/if}}>Select</option>
                {{#each this.programme}}
                <option value="{{this.Prog_abbr}}" {{#ifEquals ../MyProgramme this.Prog_abbr}}selected{{/ifEquals}}>
                    {{this.Prog_abbr}}</option>
                {{/each}}
            </select>
            <label for="programme">Programme</label>
        </div>
    </div>
    <div class="col-sm-2">
        <div class="form-floating mb-3">
            <select id="class" class="form-select" name="class" aria-label="Default select example" required>
                <option value="" {{#if this.MyClass}}{{else}}selected{{/if}}>Select</option>
                <option value="1" class="ordinal-number" {{#ifEquals this.MyClass '1' }}selected{{/ifEquals}}>1</option>
                <option value="2" class="ordinal-number" {{#ifEquals this.MyClass '2' }}selected{{/ifEquals}}>2</option>
                <option value="3" class="ordinal-number" {{#ifEquals this.MyClass '3' }}selected{{/ifEquals}}>3</option>
                <option value="4" class="ordinal-number" {{#ifEquals this.MyClass '4' }}selected{{/ifEquals}}>4</option>
            </select>
            <label for="class">Class</label>
        </div>
    </div>
    <div class="col-sm-2">
        <div class="form-floating mb-3">
            <select id="department" class="form-select" name="department" aria-label="Default select example" required>
                <option value="" {{#if this.MyDepartment}}{{else}}selected{{/if}}>Select</option>
                {{#each this.department}}
                <option value="{{this.Dept_abbr}}" {{#ifEquals ../MyDepartment this.Dept_abbr}}selected{{/ifEquals}}>
                    {{this.Dept_abbr}}</option>
                {{/each}}
            </select>
            <label for="department">Department</label>
        </div>
    </div>
    <div class="col-sm-2">
        <div class="form-floating mb-3">
            <select id="section" class="form-select" name="section" aria-label="Default select example" required>
                <option value="" {{#if this.MySection}}{{else}}selected{{/if}}>Select</option>
                <option value="A" {{#ifEquals this.MySection 'A' }}selected{{/ifEquals}}>A</option>
                <option value="B" {{#ifEquals this.MySection 'B' }}selected{{/ifEquals}}>B</option>
                <option value="C" {{#ifEquals this.MySection 'C' }}selected{{/ifEquals}}>C</option>
                <option value="D" {{#ifEquals this.MySection 'D' }}selected{{/ifEquals}}>D</option>
            </select>
            <label for="section">Section</label>
        </div>
    </div>
    <div class="col-sm-12 d-grid">
        <button class="btn btn-dark" type="submit">Submit</button>
    </div>
</div>



<script>
    // Add class 'ordinal-number'
    convertIntoOrdinalNumberByQuerySelector({
        target: ".ordinal-number",
        text: "Year",
    });

    switchInputsById(
        { src: "programme", dest: "class" },
        { src: "class", dest: "department" },
        { src: "department", dest: "section" }
    );

    const interval1 = setInterval(() => {
    }, 1000);
    const interval2 = setInterval(() => {
        clearInterval(interval1);
    }, 2000);
    const interval3 = setInterval(() => {
        clearInterval(interval2);
    }, 3000);

</script>