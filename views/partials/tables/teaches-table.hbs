{{!-- teaches-table.hbs --}}

<div class="shadow overflow-auto">
    <table class="table min-w-1280px max-w-1280px">
        <thead class="sticky-top bg-dark text-light">
            <tr>
                {{!-- <th scope="col">#</th> --}}
                <th scope="col">Id</th>
                <th scope="col">Tid</th>
                <th scope="col">Subject Code</th>
                <th scope="col">Programme</th>
                <th scope="col">Class</th>
                <th scope="col">Department</th>
                <th scope="col">Section</th>
                <th scope="col">Status</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each schema.teaches}}
            <tr class="{{#ifEquals this.Status 'active'}}table-default{{else}}table-secondary{{/ifEquals}}">
                {{!-- <th scope="row">{{this.Id}}</th> --}}
                <th scope="row">{{this.Id}}</th>
                <td>{{this.Tid}}</td>
                <td>{{this.Subject_code}}</td>
                <td>{{this.Programme}}</td>
                <td class="ordinal-number">{{this.Class}}</td>
                <td>{{this.Department}}</td>
                <td>{{this.Section}}</td>
                <td>{{this.Status}}</td>
                <td class="text-end">
                    <a href="{{../dir.parent}}/teaches-list/view-teaches/{{this.Id}}" type="button"
                        class="btn btn-dark btn-small" title="View"><i class="bi bi-eye"></i></a>
                    <a href="{{../dir.parent}}/teaches-list/edit-teaches/{{this.Id}}" type="button"
                        class="btn btn-dark btn-small" title="Edit"
                        onclick="return confirm('Are you sure, you want to edit \'{{this.Id}}\'?')"><i
                            class="bi bi-pencil"></i></a>
                    {{#ifEquals this.Status "active"}}
                    <a href="#{{this.Id}}--{{this.Status}}" type="button" class="btn btn-warning btn-small"
                        data-href="{{../dir.parent}}/teaches-list/changeStatus/{{this.Id}}/{{this.Status}}"
                        data-message="Are you sure, you want to block '{{this.Id}}'"
                        onclick="fancyAlert({confirm:this})" title="Block"><i class="bi bi-slash-circle"></i></a>
                    {{else}}
                    <a href="#{{this.Id}}--{{this.Status}}" type="button" class="btn btn-success btn-small"
                        data-href="{{../dir.parent}}/teaches-list/changeStatus/{{this.Id}}/{{this.Status}}"
                        data-message="Are you sure, you want to unblock '{{this.Id}}'"
                        onclick="fancyAlert({confirm:this})" title="Active"><i class="bi bi-check-circle"></i></a>
                    {{/ifEquals}}
                    <a href="#{{this.Id}}--{{this.Status}}" type="button" class="btn btn-danger btn-small"
                        data-href="{{../dir.parent}}/teaches-list/delete/{{this.Id}}"
                        data-message="Are you sure, you want to delete '{{this.Id}}'"
                        onclick="fancyAlert({confirm:this})" title="Active"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>


<script>
    // Add class 'ordinal-number'
    convertIntoOrdinalNumberByQuerySelector({
        target: ".ordinal-number",
        text: "Year",
    });
</script>