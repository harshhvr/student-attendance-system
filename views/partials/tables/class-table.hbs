{{!-- class-table.hbs --}}

<div class="shadow overflow-auto">
    <table class="table min-w-1280px max-w-1280px">
        <thead class="sticky-top bg-dark text-light">
            <tr>
                {{!-- <th scope="col">#</th> --}}
                <th scope="col">Programme</th>
                <th scope="col">Class</th>
                <th scope="col">Department</th>
                <th scope="col">Section</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each schema.classes}}
            <tr>
                {{!-- <th scope="row">{{this.Seq}}</th> --}}
                <th scope="row">{{this.Programme}}</td>
                <th scope="row" class="ordinal-number">{{this.Class}}</td>
                <th scope="row">{{this.Department}}</td>
                <th scope="row">{{this.Section}}</td>
                <td class="text-end">
                    <a href="{{../dir.parent}}/class-list/view-students/{{this.Programme}}/{{this.Department}}/{{this.Class}}/{{this.Section}}"
                        type="button" class="btn btn-dark btn-small" title="View"><i class="bi bi-view-list"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>


<script>
    // Add class 'ordinal-number'
    convertIntoOrdinalNumberByQuerySelector({
        target: ".ordinal-number",
        text: "Year",
    });
</script>