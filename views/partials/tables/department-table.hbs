{{!-- department-table.hbs --}}

<div class="shadow overflow-auto">
    <table class="table min-w-1280px max-w-1280px">
        <thead class="sticky-top bg-dark text-light">
            <tr>
                <th scope="col">Dept. Abbr.</th>
                <th scope="col">Dept. Name</th>
                <th scope="col">Status</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each schema.department}}
            <tr class="{{#ifEquals this.Status 'active'}}table-default{{else}}table-secondary{{/ifEquals}}">
                <th scope="row">{{this.Dept_abbr}}</th>
                <td>{{this.Dept_name}}</td>
                <td>{{this.Status}}</td>
                <td class="text-end">
                    <a href="{{../dir.parent}}/department-list/view-department/{{this.Dept_abbr}}" type="button"
                        class="btn btn-dark btn-small" title="View"><i class="bi bi-eye"></i></a>
                    <a href="{{../dir.parent}}/department-list/edit-department/{{this.Dept_abbr}}" type="button"
                        class="btn btn-dark btn-small" title="Edit"
                        onclick="return confirm('Are you sure, you want to edit \'{{this.Dept_abbr}}\'?')"><i
                            class="bi bi-pencil"></i></a>
                    {{#ifEquals this.Status "active"}}
                    <a href="#{{this.Dept_abbr}}--{{this.Status}}" type="button" class="btn btn-warning btn-small"
                        data-href="{{../dir.parent}}/department-list/changeStatus/{{this.Dept_abbr}}/{{this.Status}}"
                        data-message="Are you sure, you want to block '{{this.Dept_abbr}}'"
                        onclick="fancyAlert({confirm:this})" title="Block"><i class="bi bi-slash-circle"></i></a>
                    {{else}}
                    <a href="#{{this.Dept_abbr}}--{{this.Status}}" type="button" class="btn btn-success btn-small"
                        data-href="{{../dir.parent}}/department-list/changeStatus/{{this.Dept_abbr}}/{{this.Status}}"
                        data-message="Are you sure, you want to unblock '{{this.Dept_abbr}}'"
                        onclick="fancyAlert({confirm:this})" title="Active"><i class="bi bi-check-circle"></i></a>
                    {{/ifEquals}}
                    <a href="#{{this.Dept_abbr}}--{{this.Status}}" type="button" class="btn btn-danger btn-small"
                        data-href="{{../dir.parent}}/department-list/delete/{{this.Dept_abbr}}"
                        data-message="Are you sure, you want to delete '{{this.Dept_abbr}}'"
                        onclick="fancyAlert({confirm:this})" title="Active"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>