{{!-- course-table-read-only.hbs --}}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Course_code</th>
            <th scope="col">Course_name</th>
            <th scope="col">Class</th>
            <th scope="col">Tid</th>
            <th scope="col">Status</th>
            <th scope="col" class="text-end">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>
            <th scope="row">{{this.Course_code}}</th>
            <td>{{this.Course_name}}</td>
            <td>{{this.Class}}</td>
            <td>{{this.Tid}}</td>
            <td>{{this.Status}}</td>
            <td class="text-end">
                <a href="./view-course/{{this.Course_code}}" type="button" class="btn btn-dark btn-small"><i
                        class="bi bi-eye"></i> View</a>
                {{!-- <a href="./edit-course/{{this.Course_code}}" type="button" class="btn btn-dark btn-small"><i
                        class="bi bi-pencil"></i> Edit</a>
                <a href="./course-list/{{this.Course_code}}" type="button" class="btn btn-dark btn-small"><i
                        class="bi bi-person-x"></i> Delete</a> --}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>