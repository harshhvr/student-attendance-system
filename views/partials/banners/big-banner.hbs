<div class="big-banner banner-effect-1 d-grid">
    <div class="row gx-5">
        <div class="col"></div>
        <div class="col-md-auto">
            <div class="text-white">
                <div class="p-4 text-center">
                    <div class="fs-1 fw-semibold p-4 rounded bg-dark bg-opacity-50">Student Attendance System</div>
                </div>
                <div class="d-flex justify-content-center">
                    <div class="d-inline-flex">
                        <div class="clock" style="margin:3em 6em;"></div>

                        <script type="text/javascript">
                            const el = document.querySelector('.clock');

                            const clock = new FlipClock(el, new Date, {
                                face: 'TwelveHourClock'
                            });
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>